<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:id="@+id/relativeLayout1"
	android:layout_height="wrap_content" android:gravity="right">
	<ImageView android:src="@drawable/drag_handle"
		android:layout_width="wrap_content" android:id="@+id/drag_handle"
		android:layout_gravity="center_vertical|left" android:layout_height="wrap_content" />
	<TextView android:paddingLeft="64sp" android:textSize="32dp"
		android:id="@+id/drag_label" android:layout_gravity="center_vertical|left"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="test" />
	<ImageView android:src="@drawable/remove_button" android:paddingRight="5sp"
		android:layout_gravity="center_vertical|right" android:id="@+id/remove_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
</FrameLayout>
